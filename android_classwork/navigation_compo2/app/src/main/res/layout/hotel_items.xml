<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:elevation="15dp"
    app:cardCornerRadius="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView

                android:id="@+id/iv_hotelImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:elevation="100dp"
                android:src="@drawable/ic_business" />


        <TextView

            android:id="@+id/tv_Hotelname"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_hotelImage"
            android:layout_margin="5dp"
            android:hint="Event Name"
            android:padding="3dp"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_Hotellocation"
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_Hotelname"
            android:layout_margin="5dp"
            android:drawableRight="@drawable/ic_location"
            android:drawablePadding="3dp"
            android:hint="Event Location........"
            android:maxLines="7"
            android:padding="3dp"
            android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_Hotelprice"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_Hotelname"
                android:layout_centerInParent="true"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/tv_Hotellocation"
                android:hint="Price"
                android:maxLines="7"
                android:padding="3dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16.5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Hoteldes"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_Hotellocation"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="13dp"
                android:elegantTextHeight="true"
                android:hint="Event Details"
                android:maxLines="7"
                android:padding="13dp"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:visibility="visible" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
