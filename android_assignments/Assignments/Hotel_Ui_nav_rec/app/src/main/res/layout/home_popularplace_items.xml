<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="1dp">


            <ImageView
                android:id="@+id/iv_place_Image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/image_backgroundstyle"
                android:backgroundTint="@color/white"
                android:clipToOutline="true"
                android:elevation="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_business" />


            <TextView
                android:id="@+id/tv_placename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_place_Image"
                android:layout_margin="5dp"
                android:padding="1dp"
                android:text="Placename"
                android:textStyle="bold" />




            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_placename"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_location"
                android:padding="1dp"
                android:text="Location"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_location"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/ic_round_star_24"
                android:padding="1dp"
                android:text="Location"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>

