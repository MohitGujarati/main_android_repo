<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_mainlayout"
    android:orientation="vertical">



        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/ed_userAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_layout"
                android:inputType="numberDecimal"
                android:drawableStart="@drawable/ic_rupee"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:text="0"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_addcategory"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableEnd="@drawable/ic_category_add"
                android:text="Category"
                android:textAlignment="gravity"
                android:textSize="18dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />


            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Details"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_seletedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:background="@drawable/background_layout"
                android:hint="Select the date"

                android:textSize="15dp" />

            <EditText
                android:id="@+id/ed_categoryname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_category"
                android:drawablePadding="10dp"
                android:hint="Health,car,hotel.."
                android:padding="10dp"
                android:background="@drawable/background_layout"

                android:textSize="15dp" />

            <EditText
                android:id="@+id/ed_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_note"
                android:drawablePadding="10dp"
                android:hint="Add Note.."
                android:background="@drawable/background_layout"
                android:padding="10dp"
                android:visibility="gone"
                android:textSize="15dp"
                android:textStyle="bold" />


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/btn_done"
                style="@style/Widget.Material3.FloatingActionButton.Large.Tertiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#43A047"
                android:text="Done"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:icon="@drawable/ic_done"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.675"
                />

        </LinearLayout>
</androidx.core.widget.NestedScrollView>